{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prConcurrentLimit": 0,
  "prCreationLimit": 0,
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "//deployment.yaml//"
      ],
      "matchStrings": [
        "image: (?<depName>.*?):(?<currentValue>.*?)@(?<currentDigest>sha256:[a-f0-9]+)"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Update GitHub releases from all YAML files",
      "managerFilePatterns": [
        "/.*\\.yaml$/"
      ],
      "matchStrings": [
        "https://github.com/(?<depName>[^ /]+/[^ /]+)/releases/download/(?<currentValue>[^/]+)/"
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Update versions from renovate comments in YAML",
      "managerFilePatterns": [
        "/.*\\.yaml$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[^ ]+) depName=(?<depName>[^ ]+)\\s+(value|version): (?<currentValue>[^\\n]+)"
      ],
      "versioningTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "description": "Auto-merge minor and patch updates",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "description": "Require manual approval for major updates",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    }
  ]
}
